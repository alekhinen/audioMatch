# -----------------------------------------------------------------------------
# imports
import sys
import shutil
from parser    import parse
from validator import validate
from adder     import add
from checker   import check
from logger    import log

# -----------------------------------------------------------------------------
# Initialize Operation Struct:
OCore = {
  'U_Dir':"..",
  'A_Dir':".",
  'Mode1': 0,
  'Mode2': 0,
  'Stage': 0,
  'Threshold':100,
  'FSize':2.5,
  'FlatR':0.8,
  'database': {
    'userRecs': [],
    'adRecs': []
  },
  'Log':[]
}

# -----------------------------------------------------------------------------
# Main function, acts based upon OCore['Mode']
OCore, output = parse(OCore, sys.argv)
# log(output)
print 'users dir --- ', OCore['U_Dir']
print 'ads dir ----- ', OCore['A_Dir']
print output
OCore, output = validate(OCore)
# log(output)
print output
OCore, output = add(OCore)
# log(output)
print output
# print 'log ---------'
# print OCore['Log']
print 'database --------- user'
print OCore['database']['userRecs']
print 'database --------- advertisements'
print OCore['database']['adRecs']

output = check(OCore)
# log(output)
print output

# clean up temporary directory
shutil.rmtree('./tmp/')
